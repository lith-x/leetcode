{
    "version": "1.0.0",
    "configurations": [
      {
        "name": "TS-Node",
        "type": "node",
        "request": "launch",
        "runtimeExecutable": "ts-node",
        "runtimeArgs": [
          "--transpile-only"
        ],
        "program": "${file}",
        "cwd": "${workspaceRoot}/2015",
        "internalConsoleOptions": "openOnSessionStart",
        "skipFiles": ["<node_internals>/**", "node_modules/**"]
      }
    ]
  }